{
	"buffer_font_family": "ComicShanns Nerd Font",
	"buffer_font_size": 20,
	"hard_tabs": true,
	"tab_size": 2,
	"theme": "Andromeda",
	"ui_font_family": "Noto Sans CJK SC",
	"ui_font_size": 20,
	"vim_mode": true,
	"wrap_guides": [80, 88],
	"indent_guides": {
		"coloring": "indent_aware"
	},
	"terminal": {
		"font_family": "ComicShanns Nerd Font",
		"detect_venv": {
			"on": {
				"activate_script": "fish"
			}
		}
	},
	"languages": {
		"Python": {
			"hard_tabs": false,
			"tab_size": 4
		}
	}
}
